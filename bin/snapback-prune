#! /bin/bash

set -e
#set -x

# TODO don't hardcode
. /etc/conf/snapback
. /lib/snapback/lib.sh

#pre_prune() { }
#post_prune() { }

for subvol in $(get_subvols); do

    for snapshot in $(get_snapshots $subvol | egrep -e $(regex_flag "b") | head -n -$KEEP); do

        btrfs subvolume delete "$SNAPDIR/$snapshot"

    done

done

