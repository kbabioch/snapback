#! /bin/bash

set -e
#set -x

# TODO don't hardcode
. /etc/conf/snapback
. /lib/snapback/lib.sh

#pre_backup() { }
#post_backup() { }

# $1: path to snapshot
create_snapshot() {

    if ! is_subvol "$1"; then

        echo "Invalid subvolume: $1"
        false

    fi

    subvol=${1#/}

    if [[ -z "$subvol" ]]; then

        subvol="@"

    fi

    mkdir -p "$(dirname "$SNAPDIR/$subvol")"

    btrfs subvolume snapshot -r "$1" "$SNAPDIR/$subvol.$(date "+%Y%m%dT%H%M%S%z")"

}

lock $(basename "$0")

if [[ -z "$1"  ]]; then

    echo "No path given"
    exit 1

fi

create_snapshot "$1"

